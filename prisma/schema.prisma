generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String @id @default(cuid(2))
  name  String
  email String @unique

  accounts      Account[]
  decks         Deck[]
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]

  @@map("user")
}

model Account {
  id     String @id @default(cuid(2))
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  accountId  String
  providerId String

  accessToken  String? @db.Text
  refreshToken String? @db.Text
  idToken      String? @db.Text

  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("account")
}

model Deck {
  id        String   @id @default(cuid(2))
  title     String
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  cards Card[]
}

model Card {
  id    String @id @default(cuid(2))
  front String @db.Text
  back  String @db.Text

  deckId String
  deck   Deck   @relation(fields: [deckId], references: [id], onDelete: Cascade)
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}
